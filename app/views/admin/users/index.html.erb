<div class="table-responsive">
<table class="table table-striped table-hover">
<tr>
  <th>user</th>
  <th>email</th>
  <th>tasks_number</th>
  <th>admin</th>
  <th></th>
  <th></th>
  <th></th>
</tr>
<tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks.size %></td>
    <td><%= user.admin %></td>
    <td><%= link_to t('.show'), admin_user_path(user) %></td>
    <td><%= link_to t('.edit'), edit_admin_user_path(user) %></td>
    <td><%= link_to t('.destroy'), admin_user_path(user), method: :delete, data: { confirm: t('.confirm') } %></td>
  </tr>
  <% end %>
</tbody>

</table>
</div>
