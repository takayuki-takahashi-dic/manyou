<div class="table-responsive">
<table class="table table-striped table-hover">
<tr>
  <th><%= User.human_attribute_name :name %></th>
  <th><%= User.human_attribute_name :email %></th>
  <th><%= t '.tasks_number' %></th>
  <th><%= User.human_attribute_name :admin %></th>
  <th></th>
  <th></th>
  <th></th>
</tr>
<tbody>
  <% @users.each do |user| %>
    <% if user.admin? %>
    <tr class="table-success">
    <% else %>
    <tr>
    <% end %>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td class="tasks_size"><%= user.tasks.size %></td>
    <td><%= user.admin %></td>
    <td><%= link_to t('.show'), admin_user_path(user) %></td>
    <td><%= link_to t('.edit'), edit_admin_user_path(user) %></td>
    <td><%= link_to t('.destroy'), admin_user_path(user), method: :delete, data: { confirm: t('.confirm') } %></td>
  </tr>
  <% end %>
</tbody>

</table>
</div>
