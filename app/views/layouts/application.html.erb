<!DOCTYPE html>
<html>
  <head>
    <title>Manyou</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="container">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4 rounded-bottom">
      <%= link_to t('.index'), tasks_path,class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar" aria-controls="Navbar" aria-expanded="false" aria-label="ナビゲーションの切替">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="Navbar">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to t('.new'), new_task_path ,class: 'nav-link' %></li>
          <li class="nav-item">
            <%= link_to "New", new_task_path ,class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "New", new_task_path ,class: 'nav-link' %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Menu</a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to "New", new_task_path ,class: 'dropdown-item' %>
              <%= link_to "New", new_task_path ,class: 'dropdown-item' %>
              <%= link_to "New", new_task_path ,class: 'dropdown-item' %>
              <%= link_to "New", new_task_path ,class: 'dropdown-item' %>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  </header>

<div class="container">
    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name %>">
        <%= msg.html_safe %>
      </div>
    <% end %>

    <%= yield %>
    </div>
  </body>
</html>
