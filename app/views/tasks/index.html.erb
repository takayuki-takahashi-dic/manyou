<p id="notice"><%= notice %></p>

<h1><%= t('.index_title') %></h1>
<%= link_to t('.index'), tasks_path %>

<%= link_to t('.created_at desc'), sort: "created_at desc" %>
<%= link_to t('.created_at asc'), sort: "created_at asc" %>
<%= link_to t('.deadline desc'), sort: "deadline desc" %>
<%= link_to t('.deadline asc'), sort: "deadline asc" %>

  <%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= form.text_field :title, class: "form-control", value: @search_params[:title] %>
  <%= form.submit '検索', class: 'btn btn-primary pull-right' %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>
        <%= t '.created_at' %>
      </th>
      <th>
        <%= t '.deadline' %>
        <%= t '.created_at' %>
      </th>
      <th>
        <%= sort_asc('title', @search_params) %>
        <%= sort_desc('title', @search_params) %>
      </th>
      <th>
        <%= t '.content' %>
      </th>
      <th>
        <%= t '.status' %>
      </th>
      <th>
        <%= t '.priority' %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.created_at.strftime('%m/%d %R') %></td>
        <td><%= task.deadline %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.human_attribute_enum(:status) %></td>
        <td><%= task.human_attribute_enum(:priority) %></td>
        <td><%= link_to t('.show'), task %></td>
        <td><%= link_to t('.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('.destroy'), task, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
    <%= paginate @tasks %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_task_path %>
