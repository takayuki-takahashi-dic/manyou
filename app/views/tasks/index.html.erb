<p id="notice"><%= notice %></p>

<h1><%= t('.index_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.created_at' %></th>
      <th><%= t '.title' %></th>
      <th><%= t '.content' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.created_at.strftime('%m/%d %R') %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= link_to t('.show'), task %></td>
        <td><%= link_to t('.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('.destroy'), task, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_task_path %>
