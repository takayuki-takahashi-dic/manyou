<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, t('.errors_count')) %> </h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-md-6 mb-6">
<form>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title ,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content ,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :deadline %>
    <%= form.date_select :deadline, {use_month_numbers: true}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Task.enum_options_for_select(:status), {}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :priority %>
    <%= form.select :priority, Task.enum_options_for_select(:priority), {}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :tags %><br>
    <%= collection_check_boxes(:task, :tag_ids, Tag.all, :id, :title ) do |t|  %>
      <% t.label { t.check_box + t.text } %>
    <% end %>
  </div>

  <div class="form-group">
    <% if @task.new_record? %>
    <%= form.submit t(".new"), class: "btn btn-primary"   %>
    <% else %>
    <%= form.submit t(".edit"), class: "btn btn-primary"   %>
    <% end %>
  </div>
<% end %>

</form>
  </div>
