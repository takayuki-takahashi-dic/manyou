<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, t('.errors_count')) %> </h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_select :deadline %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Task.enum_options_for_select(:status) %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Task.enum_options_for_select(:priority) %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
